<!DOCTYPE html>
<html lang="es">
<head>
    <!-- Incluimos el head parcial -->
    <%- include('../partials/head', { title: title }) %>
  
</head>
<body>

    <!-- Incluimos el navbar parcial -->
    <%- include('../partials/navbar') %>

    <main class="admin-container">
        <div class="form-section">
            <h2>Crear producto</h2>
            <hr>
            
            <form id="altaProducts-form">
                
                <div class="form-group">
                    <label for="prod-nombre">Nombre del Producto</label>
                    <input type="text" name="nombreProducto" id="prod-nombre" required>
                </div>

                <div class="form-group">
                    <label for="prod-tipo">Categoría</label>
                    <select name="tipo" id="prod-tipo" required>
                        <option value="LP">LP</option>
                        <option value="CD">CD</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="prod-precio">Precio</label>
                    <input type="number" name="precio" id="prod-precio" step="0.01" required>
                </div>

                <div class="form-group">
                    <label for="prod-imagen">URL de Imagen</label>
                    <input type="text" name="imagen" id="prod-imagen" required>
                </div>

                <div class="form-group">
                    <label for="prod-stock">Stock</label>
                    <input type="number" name="stock" id="prod-stock" min="0" required>
                </div>

                <button type="submit" class="submit-button">Crear producto</button>
            </form>
        </div>
    </main>

    <!-- 
      El script de esta página (el de la clase) lo dejamos aquí,
      al final del body.
    -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const altaProductsForm = document.getElementById("altaProducts-form");
            const url = "/products"; // Ruta relativa

            altaProductsForm.addEventListener("submit", async (event) => {
                event.preventDefault(); 

                const formData = new FormData(event.target);
                const data = Object.fromEntries(formData.entries());
                console.log("Enviando al backend:", data);

                try {
                    const response = await fetch(url, {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify(data)
                    }); 

                    const result = await response.json();

                    if (response.ok) {
                        console.log(result.message);
                        
                        await Swal.fire({
                            title: '¡Éxito!',
                            text: 'Producto creado con éxito',
                            icon: 'success',
                            timer: 2000,
                            showConfirmButton: false
                        });
                        
                        window.location.href = '/'; 

                    } else {
                        throw new Error(result.message || 'Error desconocido');
                    }

                } catch(error) {
                    console.error("Error al enviar los datos: ", error);
                    
                    Swal.fire({
                        title: 'Error',
                        text: `Error al procesar la solicitud: ${error.message}`,
                        icon: 'error'
                    });
                }
            });
        });
    </script>

</body>
</html>